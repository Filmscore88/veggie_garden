<html>
<head>
<style>
table {
  font-family: arial, sans-serif;
  border-collapse: collapse;
  width: 100%;
}

td, th {
  border: 1px solid #dddddd;
  text-align: left;
  padding: 8px;
}

tr:nth-child(even) {
  background-color: #dddddd;
}
</style>
</head>
<body>


<h2> Gardens</h2>
<table>
  <tr>
    <th>Name</th>
    <th>Planting System</th>
    <th>Link</th>
  </tr>
  <%@gardens.each do |garden|%>
  <tr>
    <td><%=garden.name%></td>
    <td><%=garden.planting_system%></td>
    <td><a href= "/gardens/<%=garden.id%>">View</a></td>
  <%end%>
  </tr>
</table>
</body>
</html>
