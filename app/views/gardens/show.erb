  <%= @garden.name %><br />
  <%= @garden.planting_system %> <br />
  <%if current_user.garden_ids.include?(@garden.id)%>
  <form method="post" action="/gardens/<%= @garden.id %>/delete">
  <input id="hidden" type="hidden" name="_method" value="DELETE">
  <input type="submit" value="delete">
  </form>
  <%end%>

  <h2>Vegetables</h2>
  <ul>
  <% @garden.vegetables.each do |veggie| %>
    <li><a href="/vegetables/<%=veggie.id%>"><%= veggie.name %></a></li>
      <% if @garden.farmer_id == current_user.id%>
      <a href="/gardens/<%=@garden.id%>/edit">Edit</a>
      <%end%>
  <%end%>

