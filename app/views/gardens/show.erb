<html>
<head>
<style>
table {
  font-family: arial, sans-serif;
  border-collapse: collapse;
  width: 100%;
}

td, th {
  border: 1px solid #dddddd;
  text-align: left;
  padding: 8px;
}

tr:nth-child(even) {
  background-color: #dddddd;
}
</style>
</head>
<body>

  <h2><%=@garden.name.titleize%> Garden</h2>
  <h3><%=@garden.planting_system.titleize%> Planting System</h3>

  <% if @garden.vegetables.empty? %>
    <h3> <%=@garden.name%> does not have any vegetables at the moment.</h3>
  <%else%>
    <h3>Vegetables</h3>
    <table>
      <tr>
        <th>Name</th>
        <th>Quantity</th>
        <th>Link</th>
      </tr>
      <%@garden.vegetables.each do |vegetable|%>
      <tr>
        <td><%=vegetable.name%></td>
        <td><%=vegetable.quantity%></td>
        <td><a href= "/vegetables/<%=vegetable.id%>">View</a></td>
      <%end%>
      </tr>
    </table>
    <%end%>

    <% if current_user.garden_ids.include?(@garden.id)%>
      <a href="/gardens/<%=@garden.id%>/edit">Edit</a>
      <form method="post" action="/gardens/<%= @garden.id %>/delete">
        <input id="hidden" type="hidden" name="_method" value="DELETE">
        <button type="submit" class="btn btn-link" onclick="if (!confirm('ANY VEGETABLES IN THIS GARDEN WILL BE DELETED!')) { return false }"><span>Delete</span></button>
      </form>
    <%end%>
</body>
</html>
